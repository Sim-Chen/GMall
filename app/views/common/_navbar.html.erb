<div class="row">
  <div class="col-md-12">
    <% if current_page?('/') %>
      <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">
    <% else %>
      <div class="navbar navbar-default navbar-fixed-top show_bgcolor" role="navigation">
    <% end %>
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-4" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!--=== logo ===-->
          <%= link_to root_path, class: "navbar-brand logo-box scroll" do %>
            <%= image_tag("ucas.png") %><%= 'GMall' %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse top-nav" id="menu-4">
          <!--===  ===-->
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to('商品', products_path) %></li>
            <!-- <li><%= link_to(t('brand-access'), '#', class: "scroll") %></li>
            <li><%= link_to(t('recommend-access'), '#', class: "scroll") %></li> -->
          </ul>
          <!--===  ===-->
          <ul class='nav navbar-nav  navbar-right'>
            <li class="divider" role="separator"></li>
      
            <!-- 购物车 -->
            <li>
              <%= link_to carts_path do %>
                <i class='fa fa-shopping-cart'></i> ( <%= current_cart.products.count %> )
              <% end %>
            </li>
           
            <% if !current_user %>
              <!-- 注册登陆 -->
              <li><%= link_to('注册', new_user_registration_path) %> </li>
              <li><%= link_to('登录', new_user_session_path) %></li>
            <% else %>
              <!-- user 下拉菜单 -->
              <li class='dropdown'>
                <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
                  <%= current_user.email %>
                  <b class='caret'></b>
                </a>
                <!-- 下拉菜单 -->
                <ul class='dropdown-menu'>
                  <!-- admin 后台 -->
                  <% if current_user.admin? %>
                    <li> <%= link_to('管理员', admin_products_path) %> </li>
                    <li class="divider"> </li>
                  <% end %>
                  <!-- user 选项 -->
                  <li> <%= link_to('个人账户', account_orders_path) %> </li>
                  <li> <%= link_to('用户订单', account_orders_path) %> </li>
                  <li class="divider"> </li>
                  <li> <%= link_to('退出', destroy_user_session_path, method: :delete) %> </li>
                </ul>
              </li>
            <% end %>
          </ul>
          <!-- 搜索欄 -->
        </div>
      </div>
    </div>
  </div>
</div>
